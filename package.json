{
  "name": "typed-ocpp",
  "version": "0.3.0",
  "description": "A library for type-aware parsing, serialization and validation of OCPP messages",
  "main": "dist/index.js",
  "type": "module",
  "devDependencies": {
    "@types/node": "^20.8.2",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "json-schema-to-typescript": "^14.0.4",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "test": "node --test --test-reporter=spec ./dist",
    "build:ocpp16:types": "node json2types schemas/ocpp16 src/ocpp16/types",
    "build:ocpp16:schemas": "node json2esm schemas/ocpp16 src/ocpp16/schemas",
    "build:ocpp16": "npm run build:ocpp16:types && npm run build:ocpp16:schemas",
    "build:ocpp20:types": "node json2types schemas/ocpp20 src/ocpp20/types",
    "build:ocpp20:schemas": "node json2esm schemas/ocpp20 src/ocpp20/schemas",
    "build:ocpp20": "npm run build:ocpp20:types && npm run build:ocpp20:schemas",
    "clean": "rm -rf ./dist && rm -rf ./src/ocpp16/types && rm -rf ./src/ocpp16/schemas && rm -rf ./src/ocpp20/types && rm -rf ./src/ocpp20/schemas",
    "build": "npm run clean && npm run build:ocpp16 && npm run build:ocpp20 && tsc"
  },
  "author": "Jacopo Scazzosi <jacopo@scazzosi.com>",
  "license": "MIT",
  "homepage": "https://github.com/jacoscaz/typed-ocpp",
  "bugs": "https://github.com/jacoscaz/typed-ocpp/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/jacoscaz/typed-ocpp.git"
  },
  "keywords": [
    "OCPP",
    "1.6",
    "1.6-J",
    "2.0",
    "2.0-J",
    "2.0.1",
    "2.0.1-J",
    "EV",
    "EVSE",
    "Central Station",
    "ajv",
    "validation",
    "serialization",
    "parsing",
    "typescript",
    "typed",
    "JSON",
    "JSON Schema"
  ]
}
